<div class="container">
  <h1 class="center-align">ADMIN SIGN UP</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col s12">
          <p>Name</p>
        </div>
        <div class="col s6">
          <%= f.text_field :first_name, "required" => true, :maxlength => 30, autofocus: true %>
          <%= f.label "First Name" %>
        </div>
        <div class="col s6">
          <%= f.text_field :last_name, "required" => true, :maxlength => 30 %>
          <%= f.label "Last Name" %>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m6">
          <%= f.label "E-Mail Address" %>
          <%= f.email_field :email, "required" => true, :maxlength => 50 %>
        </div>
        <div class="col s12 m6">
          <%= f.label "Profile photo" %>
          <%= f.file_field :image, class: "file-field-padding" %>
        </div>
      </div>
        <div class="row">
          <div class="col s12 m6">
            <%= f.label "Authentication Code (Provided by Admin)" %>
            <%= f.password_field :authentication_code, autocomplete: "off", "required" => true, value: "pizza" %>
          </div>
        </div>
        <div class="row">
          <div class="col s12 m6">
            <%= f.label :password, "Password (6 characters minimum)" %>
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="col s12 m6">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn" %>
        </div>
      <% end %>
      <p>Already have an account? Login <%= link_to "here", admin_session_path, class: "link-color" %></p>

</div>
