<div class="container">
  <h1 class="center-align"><%= @post.title %></h1>
  <hr class="hr-gray">
  <div class="container-fluid">
    <div class="row">
      <div class="col s12">
        <p><b>Designed: </b><%= @post.created_at.strftime("%B").to_s + " " + @post.created_at.year.to_s %> </p>
        <p><b>Description: </b><%= @post.description %></p>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m4">
        <%= image_tag @post.image.url(:medium), class: "profile-image materialboxed" %>
      </div>
      <% @postimages.each do |postimage| %>
      <div class="col s12 m4">
        <%= image_tag postimage.image.url(:medium), class: "profile-image materialboxed" %>
      </div>
      <% end %>
      </div>
      <% if current_admin %>
        <%= button_to "Edit Post", edit_portfolio_path(@post.slug), method:'get', class: "btn" %>
        <%= button_to "Delete", portfolio_path(@post.id), method: 'delete', data: {:confirm => "Are you sure you want to delete the #{@post.title} post?"}, :method => :delete, class: "btn" %>
      <% end %>
  </div>
</div>
