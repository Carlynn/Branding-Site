<div class="container">
  <h1 class="center-align">GET IN TOUCH</h1>
  <h5 class="center-align">WE can't wait to hear from you</h5>
  <div class="container-fluid">
    <div class="row">
      <div class="col s12">
        <%= form_for @message, url: create_message_url do |f| %>
          <%= notice %>
          <%= @message.errors.full_messages.join(', ') %>
          <div>
            <p>Name*</p>
            <div class="row">
              <div class="col s6">
                <%= f.text_field :first_name, "required" => true, :maxlength => 30, autofocus: true %>
                <%= f.label :first_name, "First Name" %>
              </div>
              <div class="col s6">
                <%= f.text_field :last_name, "required" => true, :maxlength => 30 %>
                <%= f.label :last_name, "Last Name"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s6">
              <%= f.label :email, "E-Mail*" %>
              <%= f.email_field :email, "required" => true, :maxlength => 60 %>
            </div>
            <div class="col s6">
              <%= f.label :phone_number, "Phone Number" %>
              <%= f.text_field :phone_number, placeholder: '(xxx) xxx-xxxx', :id => "phone" %>
            </div>
          </div>
          <div class="row">
            <div class="col s7 m6">
              <%= f.label :contact_method, "Preferred Method of Contact" %>
              <div class="label-padding">
                <%= f.radio_button :contact_method, "Phone" %>
                <%= f.label :contact_method_phone, "Phone" %>
                <%= f.radio_button :contact_method, "E-Mail" %>
                <%= f.label :contact_method_email, "E-Mail" %>
              </div>
            </div>
            <div class="col s5 m6">
              <%= f.label :location, "Where are you located?" %>
              <%= f.text_field :location, :maxlength => 30 %>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              <p>Tell us more about your inquiry:</p>
            </div>
            <div class="col s8 m6">
              <%= f.text_field :subject, "required" => true, :maxlength => 200 %>
              <%= f.label :subject, "Subject*" %>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              <%= f.label :body, "Message*", "required" => true %>
              <%= f.text_area :body, :class => "text-area-box", :maxlength => 1000 %>
            </div>
          </div>
          <%= f.submit "Submit", class: "btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
